{
  "version": "0.2.5",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceRoot}/node_modules/.bin/ava",
        "args": ["./dist/test/test.js"],
        "cwd": "${workspaceRoot}",
        "console": "integratedTerminal",
        "env": {
          "VERBOSE": "true"
        }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "processId": "${command:PickProcess}",
      "port": 5858,
      "sourceMaps": true
    }
  ]
}
