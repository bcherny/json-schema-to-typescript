{
  "version": "0.2.5",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/node_modules/ava/profile.js",
        "cwd": "${workspaceRoot}",
        "args": [
          "${workspaceFolder}/dist/test/test.js"
        ],
        "outFiles": [
          "dist/**/*.js"
        ],
        "skipFiles": [
          "<node_internals>/**/*.js"
        ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "processId": "${command:PickProcess}",
      "port": 5858,
      "sourceMaps": true,
    }
  ]
}
