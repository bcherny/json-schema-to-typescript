{
  "version": "0.2.5",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceRoot}/node_modules/.bin/ava ./dist/test/test.js",
        "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch My Test",
      "program": "${workspaceRoot}/src/cli.ts",
      "args": [
        "-i",
        "../../projects/plantcon/documentation/json-schemas/schemas/plantcon/plantcon.production-asset-job.json"
      ],
      "env": {
        "VERBOSE": "true"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Tests",
      "program": "${workspaceFolder}/node_modules/.bin/ava",
      "args": [
        "--timeout=300s",
        "--verbode"
      ],
      "envFile": "${workspaceFolder}/.vscode/.env",
      // "args": [
      //   "--timeout",
      //   "999999",
      //   "--colors",
      //   "${workspaceFolder}/test"
      // ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        // "${workspaceFolder}/dist/**/*.js",
        // "${workspaceFolder}/dist/*.js",
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "processId": "${command:PickProcess}",
      "port": 5858,
      "sourceMaps": true
    }
  ]
}