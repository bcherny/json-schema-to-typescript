{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "out",
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es6"
    ],
    "strictNullChecks": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "files": [
    "src/index.ts",
    "test/test.ts"
  ],
  "include": [
    "test/cases/*.ts"
  ]
}