        "operator": {
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "Any",
                "IPMatch",
                "GeoMatch",
                "Equal",
                "Contains",
                "LessThan",
                "GreaterThan",
                "LessThanOrEqual",
                "GreaterThanOrEqual",
