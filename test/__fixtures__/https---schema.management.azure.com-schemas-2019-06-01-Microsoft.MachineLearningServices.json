  "definitions": {
    "AKS": {
      "type": "object",
      "properties": {
        "computeType": {
          "type": "string",
          "enum": [
            "AKS"
          ]
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/AKSProperties"
            },
